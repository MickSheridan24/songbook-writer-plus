  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Create Migration",
      "cwd": "${workspaceRoot}/back",
      "args": [
        "${workspaceRoot}/back/db/util/createMigration.ts",
        "songs",
