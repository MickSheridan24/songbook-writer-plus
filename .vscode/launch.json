    {
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "name": "Migrate",
      "cwd": "${workspaceRoot}/back",
      "program": "${workspaceRoot}/back/db/util/migrator.ts",
    }
  ]
